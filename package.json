              "background0": {
                "type": "string",
                "description": "Darkest background color.",
                "pattern": "^#(([0-9A-Fa-f]){3,4}|([0-9A-Fa-f]){6}|([0-9A-Fa-f]){8})$",
                "patternErrorMessage": "Invalid color string."
              },
              "background1": {
                "type": "string",
                "description": "Dark background color.",
                "pattern": "^#(([0-9A-Fa-f]){3,4}|([0-9A-Fa-f]){6}|([0-9A-Fa-f]){8})$",
