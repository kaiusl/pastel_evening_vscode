{
  "name": "pastel-evening-theme",
  "displayName": "Pastel Evening Theme",
  "description": "Dark theme with pastel colors and a slight blue hint to the editor.",
  "publisher": "kaiusl",
  "version": "0.4.0",
  "icon": "icon.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kaiusl/pastel_evening_vscode.git"
  },
  "categories": [
    "Themes"
  ],
  "keywords": [
    "Theme",
    "Dark",
    "Pastel",
    "Evening"
  ],
  "galleryBanner": {
    "color": "#292b33",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "main": "./dist/src/extension.js",
  "browser": "./dist/src/extension_web.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "themes": [
      {
        "label": "Pastel Evening Dark",
        "uiTheme": "vs-dark",
        "path": "./dist/themes/pastel_evening_dark.json"
      }
    ],
    "markdown.previewStyles": [
      "./dist/mdstyle/pastel_evening_dark.css"
    ],
    "configuration": {
      "title": "Pastel Evening Theme",
      "properties": {
        "pastelEveningTheme.italics": {
          "type": "boolean",
          "default": true,
          "description": "Use italics for static variables and members.",
          "order": 0
        },
        "pastelEveningTheme.underlined": {
          "type": "boolean",
          "default": true,
          "description": "Underline mutable variables and members.",
          "order": 0
        },
        "pastelEveningTheme.markdownPreviewStyle": {
          "type": "boolean",
          "default": true,
          "scope": "machine",
          "description": "Use themed markdown preview style.",
          "order": 1
        },
        "pastelEveningTheme.colorOverrides.common": {
          "type": "object",
          "order": 2,
          "description": "Common color overrides. \nThese colors are used throughout the theme, so major changes may result in weird theme. The intended use is for slight adjustment of each color if needed. \nAccepted color formats are #rgb, #rgba, #rrggbb, #rrggbbaa.",
          "properties": {
            "background0": {
              "type": "string",
              "description": "Darkest background color."
            },
            "background1": {
              "type": "string",
              "description": "Dark background color."
            },
            "background2": {
              "type": "string",
              "description": "Base background color."
            },
            "background3": {
              "type": "string",
              "description": "Light background color."
            },
            "background4": {
              "type": "string",
              "description": "Lightest background color."
            },
            "foreground0": {
              "type": "string",
              "description": "Darkest foreground color."
            },
            "foreground1": {
              "type": "string",
              "description": "Dark foreground color."
            },
            "foreground2": {
              "type": "string",
              "description": "Base foreground color."
            },
            "foreground3": {
              "type": "string",
              "description": "Light foreground color."
            },
            "foreground4": {
              "type": "string",
              "description": "Lightest foreground color."
            },
            "red": {
              "type": "string",
              "description": "Base red color."
            },
            "pink": {
              "type": "string",
              "description": "Base pink color."
            },
            "orange": {
              "type": "string",
              "description": "Base orange color."
            },
            "lightOrange": {
              "type": "string",
              "description": "Base light orange color."
            },
            "yellow": {
              "type": "string",
              "description": "Base yellow color."
            },
            "green": {
              "type": "string",
              "description": "Base green color."
            },
            "cyan": {
              "type": "string",
              "description": "Base cyan color."
            },
            "blue": {
              "type": "string",
              "description": "Base blue color."
            },
            "purple": {
              "type": "string",
              "description": "Base purple color."
            }
          },
          "additionalProperties": false
        },
        "pastelEveningTheme.colorOverrides.ui": {
          "type": "object",
          "order": 3,
          "description": "UI color overrides.",
          "properties": {
            "accentBackground": {
              "type": "string",
              "description": ""
            },
            "accentAltBackground": {
              "type": "string",
              "description": ""
            },
            "accentForeground": {
              "type": "string",
              "description": ""
            }

          },
          "additionalProperties": false
        },
        "pastelEveningTheme.colorOverrides.editor": {
          "type": "object",
          "order": 4,
          "description": "Editor color overrides.",
          "properties": {
            "selectionBackground": {
              "type": "string",
              "description": ""
            },
            "hoverHighlightBackground": {
              "type": "string",
              "description": ""
            },
            "searchMatchBackground": {
              "type": "string",
              "description": ""
            },
            "searchMatchSelectedBackground": {
              "type": "string",
              "description": ""
            },
            "foreground0": {
              "type": "string",
              "description": "Muted color of editor text."
            },
            "foreground2": {
              "type": "string",
              "description": "Base color of editor text."
            },
            "foreground4": {
              "type": "string",
              "description": "Highlight color of editor text."
            }
          },
          "additionalProperties": false
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build:publish",
    "build:publish": "npm run export-version && npm run generate-theme && npm run webpack:publish",
    "build:dev": "npm run export-version && npm run generate-theme && npm run webpack:dev",
    "generate-theme": "ts-node ./src/scripts/generate_theme.ts",
    "export-version": "node -p \"'export const THEME_VERSION = ' + JSON.stringify(require('./package.json').version) + ';'\" > src/version.ts",
    "watch": "nodemon --exec 'npm run build:dev'",
    "clean": "rm -r dist",
    "clean-node": "rm -rf node_modules",
    "webpack:dev": "webpack --mode development",
    "webpack:publish": "webpack --mode production --devtool hidden-source-map",
    "web-test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=./",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "@vscode/vsce": "^2.22.0",
    "@vscode/test-web": "*",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "ts-loader": "^9.5.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}
